@model TaskTracker.Models.ItemLisModel

@{
    ViewBag.Title = "Completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Completed tasks</h3>
<p>
    @Html.ActionLink("Back to Tasks", "Index")
</p>
<p>
    Environment: <strong> @Model.EnvironmentName </strong>
</p>  

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("User")
        </th>
        <th>
            @Html.DisplayName("Completed Date")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.List) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CompletedDate)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id = item.Id })
           
        </td>
    </tr>
}

</table>
